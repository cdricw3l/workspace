{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C: clang build active file",
        "type": "cppbuild",
        "command": "/usr/bin/clang",
        "args": [
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "-Werror",                   // Traite les avertissements comme des erreurs
          "-Wextra",
          "-Wall",
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }
  